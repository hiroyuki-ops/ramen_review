<section class="sextion mt-6">
  <div class="container">
	<div class="columns is-centered">
	  <div class="column is-5">
		<div class="card mb-6">
		  <header class="card-header">
		    <p class="card-header-title">
		      <%= ramen_shop.name %>
			</p>
		  </header>
		  <div class="card-content">
			<div class="content">
			  <div class="content average-score">
				<div class="star-rating mb-2">
				  <div class="star-rating-front" style="width" <%= ramen_shop.name%> ></div>
				  <div class="star-rating-back">⭐︎⭐︎⭐︎⭐︎⭐︎</div>
				</div>
				<div class="average-score-desplay ml-3 pt-2">
				  <%= ramen_shop.avg_score %>点 (<%= ramen_shop.reviews.count %>)
				</div>
			  </div>
		    </div>
		  </div>
		  <footer class="card-footer">
		  	<%= link_to remen_shop_reviews_path(ramen_shop), class: "button" do %>
		  	  レビューを見る
		  	<% end %>
		  	<%= link_to ramen_shop_path(ramen_shop), class: "button" do %>
		  	  レビューを書く
		  	<% end %>
		  </footer>
		</div>
		<%= render 'reviews/form', review: @review, ramen_shop: @ramen_shop %>
	  </div>
	</div>
  </div>
</section>